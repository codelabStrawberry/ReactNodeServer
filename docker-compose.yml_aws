version: "3.8"

services:
  node:
    image: vawing21/node:latest
    build: ./server
    env_file:
      - ./server/.env
    expose:
      - "3000"
    networks:
      - backend

  nginx:
    image: vawing21/nginx:latest
    build: ./client
    ports:
      - "80:80"
    depends_on:
      - node
    networks:
      - backend

networks:
  backend:
    driver: bridge
