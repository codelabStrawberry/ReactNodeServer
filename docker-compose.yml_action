version: "3.9"

services:
  node:
    image: vawing21/node:latest
    env_file:
      - ./server/.env
    networks:
      - backend
    extra_hosts:
      - "host.docker.internal:host-gateway"

  nginx:
    image: vawing21/nginx:latest
    ports:
      - "80:80"
    depends_on:
      - node
    networks:
      - backend
    extra_hosts:
      - "host.docker.internal:host-gateway"

networks:
  backend:
    driver: bridge
